#!/usr/bin/env ruby
$LOAD_PATH.unshift(File.expand_path(File.join(File.dirname(__FILE__), "..", "lib")))


require "rubygems"
require "bundler/setup"
require "bartlett/commands/add_user"

USAGE_MESSAGE = <<-MSG
Usage: bart [--help] <command> [<args>]

Commands:
  add-user    Authorizes a github user to pair with out
MSG

cmd = ARGV.shift

if cmd.nil? || cmd == "--help"
  puts USAGE_MESSAGE
  exit(0)
end


case cmd
when "add-user"
  Bartlett::Commands::AddUser.run(ARGV)
else
  puts USAGE_MESSAGE
  exit(0)
end
